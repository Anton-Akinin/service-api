FROM openjdk:8-jre

LABEL maintainer="Andrei Varabyeu <andrei_varabyeu@epam.com>"
LABEL version="@version@"
LABEL description="@description@"

ENV JAVA_OPTS="-Djava.security.egd=file:/dev/./urandom -Xmx1g -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/tmp"

RUN apt-get update && \
    apt-get install -y fonts-noto && \
    rm -rf /var/lib/apt/lists/*

VOLUME /tmp

RUN sh -c "echo '#!/bin/bash \n\
exec java $JAVA_OPTS -jar /app.jar' > /run.sh && chmod +x /run.sh"

ADD @name@-@version@.jar app.jar

RUN sh -c 'touch /app.jar'
EXPOSE 8080

ENTRYPOINT ["/run.sh"]

